# Rename this file to .env after configuration

# =============================================================================
# LLM Configuration - Cloud-First with Ollama Fallback
# =============================================================================

# Provider priority (comma-separated, checked in order when online)
# Available: openai, anthropic, xai, google, ollama
PROVIDER_PRIORITY=openai,anthropic,xai,google,ollama

# -----------------------------------------------------------------------------
# Cloud Providers (Primary - when online)
# -----------------------------------------------------------------------------

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxx
OPENAI_MODEL=gpt-4o

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# xAI/Grok Configuration
XAI_API_KEY=xai-xxxxxxxxxxxx
XAI_MODEL=grok-2

# Google/Gemini Configuration
GOOGLE_API_KEY=xxxxxxxxxxxx
GOOGLE_MODEL=gemini-1.5-pro

# -----------------------------------------------------------------------------
# Ollama Sidecar (Fallback - always running)
# -----------------------------------------------------------------------------

OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=ministral-3:3b

# -----------------------------------------------------------------------------
# Connectivity Detection
# -----------------------------------------------------------------------------

CONNECTIVITY_CHECK_URL=https://api.openai.com
CONNECTIVITY_TIMEOUT_MS=3000

# -----------------------------------------------------------------------------
# GlueLLM Settings
# -----------------------------------------------------------------------------

GLUELLM_MAX_TOOL_ITERATIONS=10

# =============================================================================
# Server Configuration
# =============================================================================

HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# Diagnostic Configuration
# =============================================================================

# Timeout for network commands (seconds)
COMMAND_TIMEOUT=10

# Default DNS servers for testing
DNS_SERVERS=8.8.8.8,1.1.1.1

# Default hosts for DNS resolution tests
DNS_TEST_HOSTS=google.com,cloudflare.com

# Maximum tool execution rounds per chat turn
MAX_TOOL_ROUNDS=10

# =============================================================================
# Legacy Settings (deprecated, kept for compatibility)
# =============================================================================

# LLM_BACKEND is deprecated - use PROVIDER_PRIORITY instead
LLM_BACKEND=ollama